[meta]
title = "[Cylc 8] Demo Cylc adding `lib/python` to pythonpath"
description = """
Shows how scripts available in lib python are available to
be run and can be passed environment variables.
"""
written for cylc version = 8.x

[scheduler]
    UTC mode = True

[scheduling]
    [[graph]]
        R1 = Quokka => Numbat


[runtime]
    [[root]]
        script = "example.py"
    [[Quokka]]
        [[[environment]]]
            whom = Quokka
    [[Numbat]]
        [[[environment]]]
            whom = Numbat



